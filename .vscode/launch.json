{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "target_create",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.target_create",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/cacitesting.env",
            "args": [
                "examples/${input:cacitestingTargetName}"
            ]
        },
        {
            "name": "vscode_testing",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.vscode_testing",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/cacitesting.env",
            "args": [
                "examples/${input:cacitestingTargetPath}"
            ]
        },
        {
            "name": "images_pull",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.images_pull",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/cacitesting.env",
            "env": {
                "TAG": "${input:Tag}"
            },
            "args": [
                "examples/${input:cacitestingTargetPath}"
            ]
        },
        {
            "name": "images_build",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.images_build",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/cacitesting.env",
            "env": {
                "TAG": "${input:Tag}"
            },
            "args": [
                "examples/${input:cacitestingTargetPath}"
            ]
        },
        {
            "name": "images_push",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.images_push",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/cacitesting.env",
            "env": {
                "TAG": "${input:Tag}"
            },
            "args": [
                "examples/${input:cacitestingTargetPath}"
            ]
        },
        {
            "name": "policies_gen",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.policies_gen",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/cacitesting.env",
            "env": {
                "TAG": "${input:Tag}"
            },
            "args": [
                "examples/${input:cacitestingTargetPath}",
                "--deployment-name",
                "${input:cacitestingDeploymentName}"
            ]
        },
        {
            "name": "aci_deploy",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.aci_deploy",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/cacitesting.env",
            "args": [
                "examples/${input:cacitestingTargetPath}",
                "-n",
                "${input:cacitestingDeploymentName}"
            ]
        },
        {
            "name": "aci_monitor",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.aci_monitor",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/cacitesting.env",
            "args": [
                "-n",
                "${input:cacitestingDeploymentName}"
            ]
        },
        {
            "name": "aci_remove",
            "type": "debugpy",
            "request": "launch",
            "module": "c_aci_testing.aci_remove",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/cacitesting.env",
            "args": [
                "-n",
                "${input:cacitestingDeploymentName}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "cacitestingTargetPath",
            "type": "pickString",
            "description": "Enter the name of the target:",
            "options": [
                "python_server",
                "remote_images",
                "sidecar",
                "attestation",
                "docker_in_docker",
            ]
        },
        {
            "id": "cacitestingTargetName",
            "type": "promptString",
            "description": "Enter the name of the new target:"
        },
        {
            "id": "cacitestingDeploymentName",
            "type": "promptString",
            "description": "Enter the name of the deployment:"
        },
        {
            "id": "Tag",
            "type": "promptString",
            "description": "Enter the tag to use:"
        }
    ]
}