{
    "testName": "simple_server",
    "images": {
        "primary": "simple_server/Dockerfile"
    },
    "containerGroups": [
        {
            "containers": [
                {
                    "image": "primary",
                    "ports": [22, 8000],
                    "cores": 1,
                    "ram": 4
                }
            ],
            "ports": [22, 8000]
        }
    ],
    "securityPolicies": [
        "simple_server/security_policies/allow_all.rego"
    ],
    "registryCredentials": {
        "$AZURE_REGISTRY_URL": {
            "username": "$AZURE_REGISTRY_USERNAME",
            "password": "$AZURE_REGISTRY_PASSWORD"
        }
    }
}