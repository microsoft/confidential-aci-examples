{
    "testName": "simple_sidecar",
    "images": {
        "primary": "simple_sidecar/primary.Dockerfile",
        "sidecar": "simple_sidecar/sidecar.Dockerfile"
    },
    "containerGroups": [
        {
            "containers": [
                {
                    "image": "primary",
                    "ports": [8000],
                    "cores": 2,
                    "ram": 8
                },
                {
                    "image": "sidecar",
                    "ports": [8001],
                    "cores": 2,
                    "ram": 8
                }
            ],
            "ports": [8000]
        }
    ],
    "securityPolicies": [],
    "registryCredentials": {
        "$AZ_REGISTRY_LOGIN": {
            "username": "$AZ_REGISTRY_USERNAME",
            "password": "$AZURE_REGISTRY_PASSWORD"
        }
    }
}